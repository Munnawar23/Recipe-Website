<% if(recipe != null ) { %>

    <nav aria-label="breadcrumb">
      <ol class="breadcrumb flex text-gray-600 space-x-2">
        <li class="breadcrumb-item">
          <a href="/" class="text-white hover:underline">Home</a>
        </li>
        <li class="breadcrumb-item" aria-current="page">
          <span class="text-white"><%- recipe.name %></span>
        </li>
      </ol>
    </nav>
  
    <div class="flex flex-wrap mt-4">
  
      <div class="w-full md:w-1/3 mb-4 md:mb-0">
        <img src="/uploads/<%- recipe.image %>" class="w-full h-auto object-cover sticky top-5" alt="<%- recipe.name %>" loading="lazy">
      </div>
  
      <div class="w-full md:w-2/3 md:pl-8">
        <div class="mb-4">
          <h1 class="text-2xl font-bold"><%- recipe.name %></h1>
          <p class="text-white"><i class="bi bi-tag"></i> <%- recipe.category %></p>
        </div>
  
        <div class="mb-6">
          <h4 class="text-xl font-semibold mb-2">Cooking Instructions</h4>
          <p class="whitespace-pre-line text-white"><%- recipe.description %></p>
        </div>
  
        <div>
          <h4 class="text-xl font-semibold mb-2">Ingredients</h4>
          <ul class="list-none space-y-1">
            <% recipe.ingredients.forEach(function(ingredient, index){ %>
              <li class="p-2 bg-gray-800 rounded"><%= ingredient %></li>
            <% }) %>
          </ul> 
        </div>
      </div>
    </div>
  
  <% } else { %>
    <p>No item found.</p>
  <% } %>
  
<div class="px-4 py-5 my-5 text-center">
    <h1 class="text-5xl font-bold">Submit Your Recipe</h1>
    <div class="lg:w-1/2 mx-auto">
      <p class="text-lg">Share your amazing recipes with thousands of web developers across the world. Fill our form to get started.</p>
    </div>
  </div>

  <% if(infoSubmitObj != '') { %>
    <div class=" bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
      <%= infoSubmitObj %>
    </div>
    <% } %>
    
  <% if(infoErrorObj  != '') { %>
    <div class=" bg-green-100 border border-green-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <%= infoErrorObj[0].message %>
    </div>
    <% } %>
    
  
  <div class="flex justify-center text-black">

   
    <div class="w-full max-w-2xl">
  
      <form action="/submit-recipe" enctype="multipart/form-data" method="POST">
      
        <div class="space-y-4">
  
          <div class="w-full">
            <label for="email" class="block text-sm font-medium text-white">Email</label>
            <input type="email" placeholder="" name="email" id="email" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm p-1">
          </div>
  
          <div class="w-full">
            <label for="name" class="block text-sm font-medium text-white">Recipe Name</label>
            <input type="text" name="name" id="name" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm p-1" required>
          </div>
          
          <div class="w-full">
            <label for="description" class="block text-sm font-medium text-white">Description</label>
            <textarea name="description" id="description" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" cols="30" rows="4"></textarea>
          </div>
  
          <div class="w-full">
            <label for="ingredients" class="block text-sm font-medium text-white">Ingredients</label><br>
            <small class="text-white">Example: Ice</small>
            <div class="ingredientList space-y-2">
              <div class="ingredientDiv">
                <input type="text" name="ingredients" class=" p-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
              </div>
            </div>
          </div>
  
          <div class="w-full">
            <button type="button" class="inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" id="addIngredientsBtn">+ Ingredient</button>
          </div>
  
          <div class="w-full">
            <label for="category" class="block text-sm font-medium text-white">Select Category</label>
            <select class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" name="category" aria-label="Category">
              <option selected>Select Category</option>
              <option value="Thai">Thai</option>
              <option value="American">American</option>
              <option value="Chinese">Chinese</option>
              <option value="Mexican">Mexican</option>
              <option value="Indian">Indian</option>
            </select>
          </div>
  
          <div class="w-full">
            <label for="image" class="block text-sm font-medium text-white">Product Image</label>
            <input type="file" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" name="image" accept="image/*">
          </div>
  
          <div class="w-full">
            <button type="submit" class="w-full inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Submit Recipe</button>
          </div>
  
        </div>
      
      </form>
  
    </div>
  </div>
  
<h1 class="pb-4">Search result</h1>
<div class="flex flex-wrap gap-2 text-white lg:gap-7 ">
  
    <% if(recipe != ''){ %>
      <% recipe.forEach(function(recipe, index){ %>
      <a href="/recipe/<%= recipe._id %>" class="w-1/2 lg:w-1/5 text-center category__link">
        <div class="category__img category__img--large shadow">
          <img src="uploads/<%= recipe.image %>" alt="<%= recipe.name %>" loading="lazy">
        </div> 
        <div class="pt-1"><%= recipe.name %></div>
      </a>
      <% }) %>
     <% } else{ %>
      <p>No items found</p>
      <% } %>
  </div>
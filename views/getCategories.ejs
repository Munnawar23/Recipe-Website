<h1 class="pb-4">Explore Categories</h1>

<nav aria-label="breadcrumb">
  <ol class="list-none p-0 inline-flex space-x-2">
    <li class="breadcrumb-item">
      <a href="/" class="text-blue-600 hover:text-blue-800">Home</a>
    </li>
    <li class="breadcrumb-item">
      <a href="/categories" class="text-blue-600 hover:text-blue-800">Categories</a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">
      <span class="text-gray-500">Explore Categories</span>
    </li>
  </ol>
</nav>

<div class="grid grid-cols-2 md:grid-cols-5 gap-2 mt-5 md:gap-3 mb-4 h-full">
<% if(typeof categories !== 'undefined' && categories.length > 0) { %>
    <% categories.forEach(function(categories, index){ %>
  
      <a href="/categories/<%- categories.name %> " class="text-center category__link">
        <div class="category__img shadow">
          <img src="images/<%- categories.image %>" alt="<%- categories.name %>" loading="lazy">
        </div>
        <div class="pt-1"><%- categories.name %></div>
      </a>
      <% } ) %>
      <% } %>
    </div>

    <div class="flex flex-wrap  h-screen bg-black gap-2 text-white lg:gap-7">
  
      <% if(typeof categoryById !== 'undefined' && categoryById.length > 0){ %>
        <% categoryById.forEach(function(recipe, index){ %>
        <a href="/recipe/<%= recipe._id %>" class="w-1/2 lg:w-1/5 text-center category__link">
          <div class="category__img category__img--large shadow">
            <img src="/uploads/<%= recipe.image %>" alt="<%= recipe.name %>" loading="lazy">
          </div> 
          <div class="pt-1"><%= recipe.name %></div>
        </a>
        <% }) %>
       <% } else{ %>
        <p>No items found</p>
        <% } %>
    </div>
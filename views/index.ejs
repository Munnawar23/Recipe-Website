<!--categories-->
<div class="flex flex-wrap gap-5 lg:gap-10 py-4">
<% if(categories != '') { %>
  <% categories.forEach(function(categories, index){ %>

    <a href="/categories/<%- categories.name %> " class="w-1/2 lg:w-1/6 text-center category__link">
      <div class="category__img shadow">
        <img src="images/<%- categories.image %>" alt="<%- categories.name %>" loading="lazy">
      </div>
      <div class="pt-1"><%- categories.name %></div>
    </a>
